#!/bin/sh
# Preview script built for use with lf and fzf
CACHE="$HOME/.cache/lf"
LINES=30
case "$1" in
    *.png|*.jpg|*.JPG|*.jpeg|*.bmp|*.gif) preview-image draw "$1" "$2" "$3" "$4" "$5" && exit 1 ;;
		*.mp4|*.flv|*.mkv|*.webm|*.mov|*.webp) ffmpegthumbnailer -i "$1" -o "$CACHE/xxx.jpg" -s 0 -q 5 && preview-image draw "$CACHE/xxx.jpg" "$2" "$3" "$4" "$5" && exit 1 ;;
		*.wav|*.mp3) mediainfo "$1" ;;
    *.pdf) pdftotext "$1" -;;
    *.tgz|*.tar.gz) tar tzf "$1";;
	  *.tar.bz2|*.tbz2) tar tjf "$1";;
	  *.tar.txz|*.txz) xz --list "$1";;
	  *.tar) tar tf "$1";;
	  *.zip|*.jar|*.war|*.ear|*.oxt) unzip -l "$1";;
	  *.rar) unrar l "$1";;
	  *.7z) 7z l "$1";;
    *.tar.zst) tar -I zstd -tvf "$1";;
    *.html|*.xml) cat "$1";;
    *.zsh*|*.bash*|*.git*) cat "$1";;
	  *.[1-8]) man "$1" | col -b ;;
	  *.o) nm "$1" | less ;;
	  *.torrent) transmission-show "$1";;
	  *.iso) iso-info --no-header -l "$1";;
	  *) highlight --out-format ansi "$1" || cat "$1";;
esac
