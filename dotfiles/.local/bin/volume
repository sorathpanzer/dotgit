vol=$(amixer sget Master | tail -n 1 | awk '{print $5}' | sed s'/\[//' | sed s'/\]//')

if [[ `pamixer --get-mute` == "true" ]]; then
    echo -n "ﱝ $vol "
else
    echo -n "$(percentage $vol   奔 墳  ) $vol "
fi
