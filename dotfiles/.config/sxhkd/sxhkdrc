#--- APPLICATIONS & SERVICES ---#

super + Return
    alacritty

super + {_,shift +} t
    {telegram-desktop,tnoty}

super + s
    signal-desktop

super + e
    element-desktop

super + v
    playvideo

super + shift + space
    passmenu --type

super + x
    12ft

super + w
    xdo activate -N qutebrowser; qutebrowser

super + Print
    scrot ~/Imagens/Screenshots/$(date '+%Y%m%d').png

super + shift + {plus,minus}
    brightness {Up,Down}

super + {plus,minus}
    pactl set-sink-volume alsa_output.pci-0000_00_1f.3.analog-stereo {+10%,-10%}

super + m
    pamixer -t

super + shift + q
    winclosemenu

super + {_,shift +} BackSpace
    {physlock,clreboot}

super + {_,shift +} Delete
    {xset dpms force off,clpoweroff}
